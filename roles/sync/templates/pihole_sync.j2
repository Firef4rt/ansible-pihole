#!/bin/bash

if [[ $(ip a | grep {{ pihole_vip_ipv4.split('/')[0] }}) ]]; then
  scp -i {{ ssh_key.filename }} {{ ansible_user_dir }}/pihole/pihole/gravity.db {{ ansible_user }}@{{ sync_target }}:{{ ansible_user_dir }}/pihole/pihole
  scp -i {{ ssh_key.filename }} {{ ansible_user_dir }}/pihole/pihole/custom.list {{ ansible_user }}@{{ sync_target }}:{{ ansible_user_dir }}
  ssh -i {{ ssh_key.filename }} {{ ansible_user }}@{{ sync_target }} sudo mv {{ ansible_user_dir }}/custom.list {{ ansible_user_dir }}/pihole/pihole
  ssh -i {{ ssh_key.filename }} {{ ansible_user }}@{{ sync_target }} docker restart pihole
fi
